{% extends 'base.html.twig' %}

{% block titlePage %}O'Potager | Connexion
{% endblock %}

{% block bodyLogin %}

	<div class="login">
		<h2 class="login__title">CONNEXION</h2>

		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form action="{{ path('app_login') }}" method="post" class="login__form">
			<div class="login__form--inputs">
				<label for="username">
					<i class="bi bi-person-fill"></i>
				</label>
				<input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Nom d'utilisateur">
			</div>
			<div class="login__form--inputs">
				<label for="password">
					<i class="bi bi-key-fill"></i>
				</label>
				<input type="password" id="password" name="_password" placeholder="Mot de passe">
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div>
				<button class="login__form--button" type="submit">login</button>
			</div>
		</form>
	</div>


{% endblock %}
